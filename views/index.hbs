    function myfunc (a,b,c)
    {
        //alert(a+b+c);
       // a.innerHTML = "<input type='text' class='new-todo' >";
        a.innerHTML="<form action=\"/UPL\" method=\"post\" id=\"myForm\" '> <input name='id' value='"+b+"' hidden >" +
                " <input onblur='foo()' class=\"new-todo\" type='text'" +
                " name=\"tash\" value='"+c+"'  autofocus></form>";

    }
